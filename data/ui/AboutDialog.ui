<interface>
  <template class="AboutDialog" parent="AdwWindow">
    <property name="hide-on-close">True</property>
    <property name="resizable">False</property>
    <property name="default-width">300</property>
    <signal name="close-request" handler="_on_close_request"/>
    <style>
      <class name="flat"/>
    </style>
    <child>
      <object class="GtkWindowHandle">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar">
                <style>
                  <class name="flat"/>
                </style>
                <property name="title-widget">
                  <object class="GtkStackSwitcher">
                    <property name="stack">_stack</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="_stack">
                <property name="hhomogeneous">True</property>
                <property name="vhomogeneous">True</property>
                <property name="transition-type">slide-left-right</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">about</property>
                    <property name="title">About</property>
                    <property name="icon-name">help-about-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <property name="spacing">18</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">18</property>
                            <property name="spacing">6</property>
                            <property name="vexpand">True</property>
                            <property name="valign">center</property>
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">fr.romainvigier.MetadataCleaner</property>
                                <property name="pixel-size">128</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label" translatable="yes">Metadata Cleaner</property>
                                <style>
                                  <class name="heading"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <binding name="label">
                                  <lookup name="version" type="AboutDialog"/>
                                </binding>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">6</property>
                            <child>
                              <object class="OutButton">
                                <property name="label" translatable="yes">Chat on Matrix</property>
                                <property name="uri">https://matrix.to/#/#metadata-cleaner:gnome.org</property>
                                <property name="icon-name">metadatacleaner-matrix-symbolic</property>
                                <style>
                                  <class name="matrix"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="OutButton">
                                <property name="label" translatable="yes">View the code on GitLab</property>
                                <property name="uri">https://gitlab.com/rmnvgr/metadata-cleaner/</property>
                                <property name="icon-name">metadatacleaner-gitlab-symbolic</property>
                                <style>
                                  <class name="gitlab"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="OutButton">
                                <property name="label" translatable="yes">Translate on Weblate</property>
                                <property name="uri">https://hosted.weblate.org/engage/metadata-cleaner/</property>
                                <property name="icon-name">metadatacleaner-weblate-symbolic</property>
                                <style>
                                  <class name="weblate"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="OutButton">
                                <property name="label" translatable="yes">Support us on Liberapay</property>
                                <property name="uri">https://liberapay.com/rmnvgr/donate</property>
                                <property name="icon-name">metadatacleaner-liberapay-symbolic</property>
                                <style>
                                  <class name="liberapay"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">credits</property>
                    <property name="title">Credits</property>
                    <property name="icon-name">face-smile-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">18</property>
                        <property name="margin-bottom">6</property>
                        <property name="spacing">18</property>
                        <child>
                          <object class="CreditsRole" id="_credits_code">
                            <property name="visible">False</property>
                            <property name="role" translatable="yes">Code</property>
                          </object>
                        </child>
                        <child>
                          <object class="CreditsRole" id="_credits_artwork">
                            <property name="visible">False</property>
                            <property name="role" translatable="yes">Artwork</property>
                          </object>
                        </child>
                        <child>
                          <object class="CreditsRole" id="_credits_documentation">
                            <property name="visible">False</property>
                            <property name="role" translatable="yes">Documentation</property>
                          </object>
                        </child>
                        <child>
                          <object class="CreditsRole" id="_credits_translation">
                            <property name="visible">False</property>
                            <property name="role" translatable="yes">Translation</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes"><![CDATA[This program uses <a href="https://0xacab.org/jvoisin/mat2">mat2</a> to parse and clean the metadata. Show them some love!]]></property>
                            <property name="justify">center</property>
                            <property name="wrap">True</property>
                            <property name="width-chars">40</property>
                            <property name="max-width-chars">40</property>
                            <property name="use-markup">True</property>
                            <style>
                              <class name="caption" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes"><![CDATA[The source code of this program is released under the terms of the <a href="https://www.gnu.org/licenses/gpl-3.0.html">GNU GPL 3.0 or later</a>. The original artwork and translations are released under the terms of the <a href="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</a>.]]></property>
                            <property name="justify">center</property>
                            <property name="wrap">True</property>
                            <property name="width-chars">40</property>
                            <property name="max-width-chars">40</property>
                            <property name="use-markup">True</property>
                            <style>
                              <class name="caption" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">The GitLab, Matrix, Liberapay and Weblate logos and names are trademarks of their respective owners.</property>
                            <property name="justify">center</property>
                            <property name="wrap">True</property>
                            <property name="width-chars">40</property>
                            <property name="max-width-chars">40</property>
                            <property name="use-markup">True</property>
                            <style>
                              <class name="caption" />
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="_copyright_label">
                            <property name="justify">center</property>
                            <property name="wrap">True</property>
                            <property name="width-chars">40</property>
                            <property name="max-width-chars">40</property>
                            <property name="use-markup">True</property>
                            <style>
                              <class name="caption" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkShortcutController">
        <property name="scope">managed</property>
        <child>
          <object class="GtkShortcut">
            <property name="trigger">Escape</property>
            <property name="action">action(window.close)</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
